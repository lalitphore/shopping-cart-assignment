{{#each this}}
<div class="section-shadow-box hp-product-category">
    <div class="hp-product-category__box">
        <div class="hp-product-category__box__img">
            <img src="{{imageUrl}}" alt="{{name}}" tabindex="0" />
        </div>
        <div class="hp-product-category__box__detail">
            <h2>{{name}}</h2>
            <p tabindex="0">{{description}} </p>
            <a href="#products/{{id}}" class="btn-1">Explore {{name}}</a>
        </div>
    </div>
</div>
{{/each}}